[github]
  user = younger-1

[core]
  editor = nvim
  ; autocrlf = true
  autocrlf = input
  quotepath = false
  pager = delta
  ; pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Solarized (dark)'
  ; excludesfile = ~/.gitignore_global
  ; attributesfile = ~/.gitattributes_global

[log]
  decorate = true
  abbrevCommit = true

[format]
  pretty = %C(magenta)%h%Creset -%C(red)%d%Creset %s %C(green)(%cr) %C(cyan)<%an>%Creset

[interactive]
  diffFilter = delta --color-only

[init]
  ; templatedir = ~/.config/git/template
  defaultBranch = main
[commit]
  ; verbose = true
  ; gpgsign = true ; Stupid: <https://code-examples.net/en/q/9b0c2e>
  template = ~/.config/git/message
[pull]
  rebase = true
[push]
  default = tracking
[fetch]
  prune = false
[rebase]
  autoStash = true
; [submodule]
;   recurse = true ; It will cause much CPU consumption

[gui]
  encoding = utf-8
  pruneDuringFetch = true
  ; fontui   = -family terminus -size 9 -weight normal -slant roman -underline 0 -overstrike 0
  ; fontdiff = -family terminus -size 9 -weight normal -slant roman -underline 0 -overstrike 0
  ; editor = gvim

[svn]
  rmdir = true

[diff]
  tool = nvimdiff2
  guitool = vscode
[difftool]
  prompt = false
[difftool "vscode"]
  cmd = code --wait --diff $LOCAL $REMOTE
[difftool "nvimdiff2"]
  cmd = nvim -d $LOCAL $REMOTE

[merge]
  summary = true
  tool = vscode
  guitool = vscode
[mergetool "vscode"]
  cmd = code --wait $MERGED
[mergetool "nvimdiff4"]
  cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[advice]
  ; statusHints = false

[protocol "http"]
  allow = always
[http]
  sslVerify = false

[url "git@github.com:"]
  insteadOf = gh:
[url "git@gitlab.com:"]
  insteadOf = gl:

