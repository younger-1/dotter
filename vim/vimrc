" let s:home = fnamemodify(resolve(expand('<sfile>:p')), ':h')
let s:home = fnamemodify(expand('<sfile>:p'), ':h')
command! -nargs=1 IncScript exec 'so ' .. fnameescape(s:home .. "/<args>")

IncScript core/start.vim
IncScript core/options.vim
IncScript core/plugs.vim
IncScript core/func.vim
IncScript core/cmd.vim
IncScript core/autocmd.vim
IncScript core/mappings.vim

